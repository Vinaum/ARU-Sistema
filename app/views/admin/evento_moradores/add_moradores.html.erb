<div class='center-form content-box'>

  <%= simple_nested_form_for @evento, validate: true, html: {method: :create, id: 'evento_moradores_form', multipart: true}, :url => admin_evento_evento_moradores_path do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @evento %>

  <p>Selecione aqueles que jogaram no <%= "#{@evento.nome} #{@evento.ano}" %> como <b>MORADORES</b></p>

    <%= hidden_field_tag :tipo, 'morador'  %>


<% @republicas.each do |r|  %>
<div class="accordion" id="accordion<%= r.id %>">
  <div class="accordion-group  accordion-caret">
    <div class="accordion-heading">
      <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion<%= r.id %>" href="#collapse<%= r.id %>">
        <%= "#{r.nome}" %>
      </a>
    </div>
    <div id="collapse<%= r.id %>" class="accordion-body collapse">
      <div class="accordion-inner">
      <div class="evento_morador">
        <%= f.association :moradores, collection: r.moradores.atual.order("nome ASC") + r.exmoradores.order("nome ASC"), label: false, label_method: lambda {|e| "#{e.full_name} #{'(atualmente ex-morador)' if e.exmorador?}"}, as: :check_boxes %>
      </div>
      </div>
    </div>
  </div>
</div>
<% end %>

  <div class="form-actions" id='cadastro_actions'>
   <%= f.submit 'Concluir', class: 'btn btn-primary' %>
   <%= link_to 'Cancel', admin_eventos_path, class: 'btn' %>
 </div>


 <% end %>

 </div>
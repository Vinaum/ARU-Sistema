<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Sistema de Repúblicas da ARU - SRA" %></title>
  <meta name="description" content="Sistema de Repúblicas da ARU">
  <meta name="author" content="André Brandão">
  <meta property="og:image" content="https://s3.amazonaws.com/arquivosaru/house.png"/>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>

  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>

  <header class="navigation-header">
    <div class="nav--top">
        <%= render 'layouts/default/navigation' %>
    </div>
  </header>

  <%= render 'layouts/default/nav-sub' if republica_signed_in? %>


  <%= render 'layouts/default/messages' %>
  <%= render 'layouts/default/index' if @index_header %>
  <%= render 'layouts/default/republicas' if @republicas_header %>


  <div id='main' class="container-fluid">
    <div class="content">
      <!-- Body Content -->
      <%= yield %>
    </div>
  </div>

  <footer class='footer'>
      <%= render 'layouts/default/footer' %>
    <%= render 'layouts/default/analytics' %>
  </footer>



</body>
</html>
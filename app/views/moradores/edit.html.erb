 <div class='content-box center-form'>

   <%= simple_nested_form_for @republica, validate: true, html: {method: :put, id: 'republica_form'}, :url => republica_moradores_path(@republica) do |f| %>
   <%= f.error_notification %>
   <%= display_base_errors @republica %>

   <h3>Moradores</h3>

   <p style='font-size: 12px'>Selecione um dos moradores para ser o <i class="icon-user"></i> <b>Representante</b> da República.</p>
   <br>

   <ol>
    <div class="morador">
      <%= f.simple_fields_for :moradores do |builder| %>
      <% if builder.object.exmorador == false || builder.object.exmorador_changed?  %>
      <%= render 'current_morador_fields', f: builder %>
      <% end %>
      <% end %>
    </div>
  </ol>

  <div class="form-actions" id='cadastro_actions'>
    <p class='terms_text pull-left'>Ao clicar no botão 'adicionar', você confirma que os moradores e seus respectivos dados são verdadeiros.</p>

    <%= f.submit 'Atualizar',  class: 'btn btn-primary' %>
    <%= link_to 'Cancel', republica_path(@republica), class: 'btn' %>
  </div>


  <% end %>
</div>
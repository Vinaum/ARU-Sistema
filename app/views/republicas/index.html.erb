<legend>Repúblicas Associadas</legend>

<% if can? :manage, :all %>
<%= link_to "Repúblicas aprovadas", republicas_path %>
|
<%= link_to "Esperando aprovação", :action => "index", :approved => "false" %>
<% end %>

<table class='table table-striped table-condensed'>
	<thead>
		<tr>
			<th></th> <!-- Logotipo -->
			<th>República</th>
			<th>Tipo</th>
			<th>Ano de Fundação</th>
			<th>Atividades</th> <!-- Prêmios - Campeã de InterReps, Reuniões, etc. -->
			<th></th> <!-- Comandos ADMIN -->
		</tr>
	</thead>

	<tbody>
		<% @republicas.each do |republica| %>
		<tr>
			<td><%= image_tag republica.logotipo, class: 'img-polaroid', id: 'logotipo' %></td>
			<td><b><%= link_to republica.nome, republica %></b></td>
			<td><%= republica.tipo %></td>
			<td><%= republica.ano_de_fundacao %></td>
			<td><%= image_tag 'glyphicons/glyphicons_332_certificate.png' if republica.nome =='Paidabartira' %>
				<%= image_tag 'glyphicons/glyphicons_045_calendar.png' if republica.nome =='Paidabartira' %>
			</td>
			
			<td>
				<% if can? :manage, :all %>
				<%= link_to 'Editar', edit_republica_path(republica), class: 'btn btn-mini' %>
				<%= link_to 'Deletar', republica, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger btn-mini' %>
				<% end %>
				<% if can? :manage, :all %>
				<% if republica.approved == false %>
				<%= link_to 'Approve', republica_path(republica, :republica => {:approved => 'true' }), method: :put, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-success btn-mini' %>
				<% end %>
				<% end %>
			</td>

		</tr>
		<% end %>
	</tbody>
</table>



<p id="notice"><%= notice %></p>


<%= image_tag @republica.logotipo, class: 'img-polaroid', id: 'logo_show' %>

<p>
  <b>Nome:</b>
  <%= @republica.nome %>
</p>

<p>
  <b>Tipo:</b>
  <%= @republica.tipo %>
</p>

<p>
  <b>Ano de fundação:</b>
  <%= @republica.ano_de_fundacao %>
</p>

<p>
  <b>Descrição:</b>
  <%= @republica.descricao %>
</p>

<% if can? :modify, @republica %>


<legend> Dados Restritos </legend>

<p>
  <b>Número de <%= link_to 'Moradores', republica_moradores_path(@republica) %>:</b>
  <%= @republica.moradores.length %>
</p>


<p>
  <b>Representante:</b>
  <%= @representante.nome + ' ' + @representante.sobrenome %>
</p>


<p>
  <b>Endereço:</b>
  <%= @republica.endereco %>
</p>

<p>
  <b>Telefone:</b>
  <%= @republica.telefone %>
</p>

<p>
  <b>Usuário:</b>
  <%= @republica.username %>
</p>

<p>
  <b>Email:</b>
  <%= @republica.email %>
</p>

<%= link_to 'Editar', edit_republica_path(@republica), class: 'btn btn-info btn-small' %><% end %>
<%= link_to 'Voltar', republicas_path, class: 'btn btn-small'  %>

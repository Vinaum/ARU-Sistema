<div class='content-box left-menu'>
	<ul>
		<% if @republica.vaga.abertas.present? && (Time.now - @republica.vaga.abertas).to_i <= 3.weeks  %>
		<li><%= link_to "<i class='fa fa-thumbs-down'></i> Encerrar Vagas!".html_safe, republica_vaga_path(@republica, acao: 'fechar'), method: :put, data: { confirm: 'Você tem certeza?' }, class: 'nav-btn nav-btn-d nav-btn-small' %></li>
		<% else %>
		<li><%= link_to "<i class='fa fa-thumbs-up'></i> Abrir Vagas!".html_safe, republica_vaga_path(@republica, acao: 'abrir'), method: :put, data: { confirm: 'Você tem certeza? A sua República terá vagas habilitadas por 3 semanas. Após isso, você deverá ativar novamente.' }, class: 'nav-btn nav-btn-c nav-btn-small' %></li>
		<% end %>
	</ul>
</div>

<div class='content-box left-menu'>
	<ul>
		<li><%= link_to "<i class='fa fa-gears'></i> Editar Conta".html_safe, edit_republica_registration_path, class: 'nav-btn nav-btn-a nav-btn-small' %></li>
		<li><%= link_to "<i class='fa fa-gears'></i> Gerenciar Contatos".html_safe, edit_republica_contato_path(@republica), class: 'nav-btn nav-btn-a nav-btn-small' %></li>
		<li><%= link_to "<i class='fa fa-gears'></i> Gerenciar Redes Sociais".html_safe, edit_republica_social_information_path(@republica), class: 'nav-btn nav-btn-a nav-btn-small' %></li>
		<li><%= link_to "<i class='fa fa-plus-square'></i> Adicionar Ex-Moradores".html_safe, republica_add_exmoradores_path(@republica), class: 'nav-btn nav-btn-a nav-btn-small' %></li>
	</ul>
</div>

<div class='content-box left-menu'>
	<ul>
		<li><%= link_to "<i class='fa fa-eye'></i> Ver Moradores".html_safe, republica_moradores_path(@republica), class: 'nav-btn nav-btn-a nav-btn-small' %></li>
		<li><%= link_to "<i class='fa fa-eye'></i> Ver Ex-moradores".html_safe, republica_index_exmoradores_path(@republica), class: 'nav-btn nav-btn-a nav-btn-small' %></li>
	</ul>
</div>